nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
  button.navbar-toggler.navbar-toggler-right(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
    span.navbar-toggler-icon
  a.navbar-brand(href="/") Navbar
  div.collapse.navbar-collapse(id="navbarSupportedContent")
    ul.navbar-nav.ml-auto
      li.nav-item.active
        a.nav-link(href="/shopping-cart") 
          i.fa.fa-shopping-cart 
          |  Shopping Cart
          if session.cart
            span.badge.badge-default #{session.cart.totalQty}
          span.sr-only (current)
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href="http://example.com", id="navbarDropdownMenuLink", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
            i.fa.fa-user  
            |  User Management
          div.dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
            if login
              a.dropdown-item(href="/user/profile") User Account
              a.dropdown-item(href="/user/logout") Logout
            else
              a.dropdown-item(href="/user/signup") Sign up
              a.dropdown-item(href="/user/signin") Sign in

   
 
