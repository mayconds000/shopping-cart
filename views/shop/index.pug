extends ../layouts/layout

block content
  br
  h1 Homepage
  each chunks in products
    div.row
      each product in chunks
        div.col-sm-4
          div.card
            img.card-img-top(src=product.imagePath, alt="Card image cap")
            div.card-block
              h4.card-title #{product.title}
              p.card-text.description #{product.description}
              p.price #{product.price}
              a.btn.btn-primary.float-right(href="/add-to-cart/"+product.id) Buy

          br
    

